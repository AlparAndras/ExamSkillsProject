@model IEnumerable<ExamSkillProject.Models.ApplicationUser>


<h1>Employees</h1>

@if (Model == null)
{
    <p>To add employees you first need to @Html.ActionLink("create a company", "Create", "Company", new { }, null) </p>
}
else
{
    foreach (var item in Model)
    {
        <li>
            @Html.DisplayFor(model => item.FirstName)
            @Html.DisplayFor(model => item.LastName)
            @Html.ActionLink("Details", "Details", new { id = item.Id })
        </li>
    }

    @Html.ActionLink("ADD EMPLOYEE", "Create", "Employee", new { }, new { @class = "btn btn-primary"})
}


