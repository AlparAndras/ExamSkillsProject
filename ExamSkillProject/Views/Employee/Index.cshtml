@model IEnumerable<ExamSkillProject.Models.ApplicationUser>


<h1>Employees</h1>

<div class="info-data col-md-12">



    @if (Model == null)
    {
        <p>To add employees you first need to @Html.ActionLink("create a company", "Create", "Company", new { }, null) </p>
    }
    else
    {

        if (User.IsInRole("Admin"))
        {
            <div class="text-center center-block">
                @Html.ActionLink("ADD EMPLOYEE", "Create", "Employee", new { }, new { @class = "btn btn-primary" })
            </div>

        }
        <div class="col-md-6 center-block">
            <table class="table table-striped">

                <thead>
                    <tr>
                        <th>Image</th>
                        <th>First name</th>
                        <th>Last name</th>
                        <th>Details</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <img class="img-circle" src="@Url.Content($"~/UploadedFiles/{item.Picture}")" alt="Alternate Text" />
                            </td>
                            <td>@item.FirstName</td>
                            <td>@item.LastName</td>
                            <td>@Html.ActionLink("Details", "Details", new { id = item.Id })</td>
                        </tr>
                    }
                </tbody>
            </table>
