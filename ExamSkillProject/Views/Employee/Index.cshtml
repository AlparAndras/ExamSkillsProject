                {
                    <img class="img-circle" src="@Url.Content($"~/UploadedFiles/{item.Picture}")" alt="Alternate Text" />
                    <span>@item.FirstName @item.LastName</span>
              
                    @Html.ActionLink("Details", "Details", new { id = item.Id })
                }*@
        </div>
    }


</div>