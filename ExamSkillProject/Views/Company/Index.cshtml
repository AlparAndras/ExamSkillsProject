@model ExamSkillProject.Models.Company



@if (Request.IsAuthenticated)
{
    <h2>Company</h2>

    if (Model != null)
    {
        <h3>@Model.Name</h3>
        <p>@Model.Description</p>
        <p>@Model.Address</p>

        <img src= "@Url.Content($"~/UploadedFiles/{Model.Icon}")" alt="Alternate Text" />

        if (User.IsInRole("Admin"))
        {
            @Html.ActionLink("EDIT COMPANY PROFILE", "Edit", "Company", new { }, null);
        }
    }
    else
    {
        @Html.ActionLink("CREATE COMPANY", "Create", "Company", new { }, null);
    }

}
